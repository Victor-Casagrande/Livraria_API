	"item": [
		{
			"name": "Listar Livros (com Filtro e Paginação)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/livros?categoria=Programação&page=1&limit=2",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"livros"
					],
					"query": [
						{
							"key": "categoria",
							"value": "Programação",
							"description": "(Opcional) Filtra livros pela categoria."
						},
						{
							"key": "page",
							"value": "1",
							"description": "(Opcional) Número da página para paginação."
						},
						{
							"key": "limit",
							"value": "2",
							"description": "(Opcional) Número de itens por página."
						}
					]
				},
				"description": "Lista todos os livros. Você pode habilitar/desabilitar os parâmetros de filtro e paginação na aba 'Params'."
			},
			"response": []
		},
